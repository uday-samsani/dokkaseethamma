---
import { Separator } from "@/components/ui/separator";
import { Sun, MapPin, Mail, Phone } from "lucide-react";

const currentYear = new Date().getFullYear();

const footerLinks = {
  organization: [
    { label: 'About Us', href: '/about' },
    { label: 'Our Mission', href: '/about#mission' },
    { label: 'Team', href: '/about#team' },
    { label: 'Transparency', href: '/events#reports' },
  ],
  getInvolved: [
    { label: 'Donate', href: '/donate' },
    { label: 'Volunteer', href: '/contact#volunteer' },
    { label: 'Events', href: '/events' },
    { label: 'Gallery', href: '/gallery' },
    { label: 'Sponsors', href: '/sponsors' },
  ],
};

const socialLinks = [
  { label: 'Facebook', href: 'https://facebook.com/dokkaseethamma' },
  { label: 'Twitter', href: 'https://twitter.com/dokkaseethamma' },
  { label: 'Instagram', href: 'https://instagram.com/dokkaseethamma' },
  { label: 'YouTube', href: 'https://youtube.com/dokkaseethamma' },
];
---

<footer class="bg-earth-900 text-cream-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Main Footer -->
    <div class="py-12 lg:py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-golden-400 to-golden-600 flex items-center justify-center">
            <Sun className="w-7 h-7 text-white" />
          </div>
          <div>
            <span class="text-xl font-bold text-white block">Dokka Seethamma</span>
            <span class="text-sm text-golden-400">Charitable Trust</span>
          </div>
        </a>
        <p class="text-cream-300 text-sm leading-relaxed mb-6">
          Continuing the legacy of the Golden Lady who served millions. We provide food and hope to those in need.
        </p>
        <!-- Social Links -->
        <div class="flex gap-4">
          {socialLinks.map(social => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={social.label}
              class="w-10 h-10 rounded-full bg-earth-800 flex items-center justify-center text-cream-400 hover:text-golden-400 hover:bg-earth-700 transition-all"
            >
              {social.label[0]}
            </a>
          ))}
        </div>
      </div>

      <!-- Organization Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Organization</h3>
        <ul class="space-y-3">
          {footerLinks.organization.map(link => (
            <li>
              <a href={link.href} class="text-cream-400 hover:text-golden-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Get Involved Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">Get Involved</h3>
        <ul class="space-y-3">
          {footerLinks.getInvolved.map(link => (
            <li>
              <a href={link.href} class="text-cream-400 hover:text-golden-400 text-sm transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-white font-semibold mb-4">Contact</h3>
        <ul class="space-y-3 text-sm text-cream-400">
          <li class="flex items-start gap-2">
            <MapPin className="w-5 h-5 text-golden-400 flex-shrink-0 mt-0.5" />
            <span>Andhra Pradesh, India</span>
          </li>
          <li class="flex items-center gap-2">
            <Mail className="w-5 h-5 text-golden-400 flex-shrink-0" />
            <a href="mailto:contact@dokkaseethamma.org" class="hover:text-golden-400 transition-colors">
              contact@dokkaseethamma.org
            </a>
          </li>
          <li class="flex items-center gap-2">
            <Phone className="w-5 h-5 text-golden-400 flex-shrink-0" />
            <a href="tel:+919999999999" class="hover:text-golden-400 transition-colors">
              +91 99999 99999
            </a>
          </li>
        </ul>
      </div>
    </div>

    <Separator className="bg-earth-800" />

    <!-- Bottom Bar -->
    <div class="py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-cream-500 text-sm text-center sm:text-left">
        Â© {currentYear} Dokka Seethamma Charitable Trust. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm">
        <a href="/privacy" class="text-cream-500 hover:text-golden-400 transition-colors">Privacy Policy</a>
        <a href="/terms" class="text-cream-500 hover:text-golden-400 transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
