---
import { Button } from "@/components/ui/button";
import { Menu, Heart, Sun, Moon } from "lucide-react";

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/events', label: 'Events' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-cream-50/95 dark:bg-slate-900/95 backdrop-blur-sm border-b border-golden-200/50 dark:border-slate-700/50 transition-colors">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between h-16 lg:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 lg:w-12 lg:h-12 rounded-full bg-gradient-to-br from-golden-400 to-golden-600 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
          <svg class="w-6 h-6 lg:w-7 lg:h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="5" stroke-width="2"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 1v2m0 18v2M4.22 4.22l1.42 1.42m12.72 12.72l1.42 1.42M1 12h2m18 0h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
          </svg>
        </div>
        <div class="hidden sm:block">
          <span class="text-lg lg:text-xl font-bold text-earth-900 dark:text-slate-100">Dokka Seethamma</span>
          <span class="block text-xs text-golden-700 dark:text-golden-400 -mt-1">Charitable Trust</span>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-8">
        {navLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors relative after:absolute after:bottom-0 after:left-0 after:w-full after:h-0.5 after:bg-golden-500 after:transition-transform',
              currentPath === link.href 
                ? 'text-golden-700 dark:text-golden-400 after:scale-x-100' 
                : 'text-earth-600 dark:text-slate-300 hover:text-golden-700 dark:hover:text-golden-400 after:scale-x-0 hover:after:scale-x-100'
            ]}
          >
            {link.label}
          </a>
        ))}
        
        <!-- Theme Toggle Button -->
        <button
          data-theme-toggle
          class="min-h-[44px] min-w-[44px] p-2 rounded-lg text-earth-600 dark:text-slate-300 hover:text-golden-700 dark:hover:text-golden-400 hover:bg-golden-100 dark:hover:bg-slate-800 transition-colors flex items-center justify-center"
          aria-label="Toggle theme"
        >
          <Sun data-sun-icon class="w-5 h-5 hidden" />
          <Moon data-moon-icon class="w-5 h-5" />
        </button>
        
        <a href="/donate">
          <Button className="bg-gradient-to-r from-golden-500 to-golden-600 hover:from-golden-600 hover:to-golden-700 text-white rounded-full px-6">
            <Heart class="w-4 h-4 mr-2" />
            Donate Now
          </Button>
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="lg:hidden flex items-center gap-1">
        <!-- Theme Toggle Button (Mobile) -->
        <button
          data-theme-toggle
          class="min-h-[44px] min-w-[44px] p-2.5 rounded-lg text-earth-600 dark:text-slate-300 hover:text-golden-700 dark:hover:text-golden-400 hover:bg-golden-100 dark:hover:bg-slate-800 transition-colors flex items-center justify-center"
          aria-label="Toggle theme"
        >
          <Sun data-sun-icon class="w-5 h-5 hidden" />
          <Moon data-moon-icon class="w-5 h-5" />
        </button>
        <button id="mobile-menu-btn" class="min-h-[44px] min-w-[44px] p-2.5 rounded-lg text-earth-600 dark:text-slate-300 hover:text-golden-700 dark:hover:text-golden-400 hover:bg-golden-100 dark:hover:bg-slate-800 transition-colors flex items-center justify-center">
          <Menu class="w-6 h-6" />
        </button>
      </div>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="lg:hidden hidden bg-cream-50 dark:bg-slate-900 border-t border-golden-200/50 dark:border-slate-700/50 pb-4">
      <div class="flex flex-col gap-1 pt-4">
        {navLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              'min-h-[44px] px-4 py-3 text-base font-medium rounded-lg transition-colors flex items-center',
              currentPath === link.href
                ? 'text-golden-700 dark:text-golden-400 bg-golden-100 dark:bg-slate-800'
                : 'text-earth-600 dark:text-slate-300 hover:text-golden-700 dark:hover:text-golden-400 hover:bg-golden-50 dark:hover:bg-slate-800'
            ]}
          >
            {link.label}
          </a>
        ))}
        <a href="/donate" class="px-4 mt-3">
          <Button className="w-full min-h-[44px] bg-gradient-to-r from-golden-500 to-golden-600 hover:from-golden-600 hover:to-golden-700 text-white rounded-full">
            <Heart class="w-4 h-4 mr-2" />
            Donate Now
          </Button>
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
