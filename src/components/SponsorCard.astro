---
// SponsorCard.astro - Reusable sponsor card component
export interface Props {
  name: string;
  logo?: string;
  tier: 'platinum' | 'gold' | 'silver' | 'bronze' | 'partner';
  website?: string;
  description?: string;
  isMonthly?: boolean;
  size?: 'large' | 'medium' | 'small';
}

const { name, logo, tier, website, description, isMonthly = false, size = 'medium' } = Astro.props;

const tierConfig = {
  platinum: {
    label: 'Platinum',
    badgeColor: 'bg-slate-100 text-slate-700 border-slate-300 dark:bg-slate-800 dark:text-slate-300 dark:border-slate-600',
    icon: 'üíé',
  },
  gold: {
    label: 'Gold',
    badgeColor: 'bg-golden-100 text-golden-700 border-golden-300 dark:bg-golden-900/30 dark:text-golden-400 dark:border-golden-600',
    icon: 'ü•á',
  },
  silver: {
    label: 'Silver',
    badgeColor: 'bg-gray-100 text-gray-700 border-gray-300 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500',
    icon: 'ü•à',
  },
  bronze: {
    label: 'Bronze',
    badgeColor: 'bg-orange-100 text-orange-700 border-orange-300 dark:bg-orange-900/30 dark:text-orange-400 dark:border-orange-600',
    icon: 'ü•â',
  },
  partner: {
    label: 'Community Partner',
    badgeColor: 'bg-green-100 text-green-700 border-green-300 dark:bg-green-900/30 dark:text-green-400 dark:border-green-600',
    icon: 'ü§ù',
  },
};

const sizeConfig = {
  large: {
    cardPadding: 'p-8',
    logoHeight: 'h-24',
    nameSize: 'text-xl',
    descSize: 'text-base',
  },
  medium: {
    cardPadding: 'p-6',
    logoHeight: 'h-16',
    nameSize: 'text-lg',
    descSize: 'text-sm',
  },
  small: {
    cardPadding: 'p-4',
    logoHeight: 'h-12',
    nameSize: 'text-base',
    descSize: 'text-xs',
  },
};

const config = tierConfig[tier];
const sizes = sizeConfig[size];
---

<div class={`group relative bg-white dark:bg-gray-800 rounded-xl border border-golden-100 dark:border-gray-700 hover:shadow-xl transition-all duration-300 ${sizes.cardPadding}`}>
  {/* Monthly Recurring Badge */}
  {isMonthly && (
    <div class="absolute -top-3 left-1/2 -translate-x-1/2">
      <span class="inline-flex items-center gap-1 px-3 py-1 bg-gradient-to-r from-golden-500 to-golden-600 text-white text-xs font-medium rounded-full shadow-md">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v20M2 12h20"/></svg>
        Monthly Supporter
      </span>
    </div>
  )}

  {/* Tier Badge */}
  <div class="flex justify-between items-start mb-4">
    <span class={`inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium border ${config.badgeColor}`}>
      <span>{config.icon}</span>
      {config.label}
    </span>
  </div>

  {/* Logo */}
  <div class={`flex items-center justify-center mb-4 ${sizes.logoHeight}`}>
    {logo ? (
      <img 
        src={logo} 
        alt={`${name} logo`} 
        class="max-w-full max-h-full object-contain grayscale group-hover:grayscale-0 transition-all duration-300"
      />
    ) : (
      <div class="w-full h-full flex items-center justify-center bg-golden-50 dark:bg-gray-700 rounded-lg">
        <span class="text-4xl">{config.icon}</span>
      </div>
    )}
  </div>

  {/* Name */}
  <h3 class={`font-bold text-earth-900 dark:text-gray-100 text-center mb-2 ${sizes.nameSize}`}>
    {name}
  </h3>

  {/* Description */}
  {description && (
    <p class={`text-earth-600 dark:text-gray-400 text-center mb-4 line-clamp-2 ${sizes.descSize}`}>
      {description}
    </p>
  )}

  {/* Website Link */}
  {website && (
    <a 
      href={website} 
      target="_blank" 
      rel="noopener noreferrer"
      class="flex items-center justify-center gap-1 text-golden-600 dark:text-golden-400 hover:text-golden-700 dark:hover:text-golden-300 text-sm font-medium transition-colors"
    >
      Visit Website
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" y1="14" x2="21" y2="3"/></svg>
    </a>
  )}
</div>