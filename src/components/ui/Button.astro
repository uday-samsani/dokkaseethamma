---
interface Props {
  variant?: 'default' | 'outline' | 'ghost' | 'link';
  size?: 'default' | 'sm' | 'lg';
  class?: string;
  href?: string;
  type?: 'button' | 'submit' | 'reset';
}

const { 
  variant = 'default', 
  size = 'default',
  class: className = '',
  href,
  type = 'button'
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-lg text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-golden-400 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50";

const variants = {
  default: "bg-golden-500 text-white hover:bg-golden-600 shadow-md",
  outline: "border-2 border-golden-500 text-golden-700 hover:bg-golden-50",
  ghost: "hover:bg-golden-100 text-golden-700",
  link: "text-golden-600 underline-offset-4 hover:underline",
};

const sizes = {
  default: "h-10 px-6 py-2",
  sm: "h-9 rounded-md px-4",
  lg: "h-12 rounded-lg px-8 text-base",
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}
