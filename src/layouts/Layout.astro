---
import '@/styles/global.css';
import ThemeProvider from '@/components/ThemeProvider.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Continuing the Legacy of Dokka Seethamma - Serving Millions through food and education initiatives.",
  image = "/images/og-image.jpg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://dokkaseethamma.org');
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <ThemeProvider />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  <!-- Primary Meta Tags -->
  <title>{title} | Dokka Seethamma Charitable Trust</title>
  <meta name="title" content={`${title} | Dokka Seethamma Charitable Trust`} />
  <meta name="description" content={description} />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalURL} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={`${title} | Dokka Seethamma Charitable Trust`} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={image} />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={canonicalURL} />
  <meta property="twitter:title" content={`${title} | Dokka Seethamma Charitable Trust`} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={image} />
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Merriweather:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  
  <!-- Structured Data -->
  <script type="application/ld+json">
    {`
      {
        "@context": "https://schema.org",
        "@type": "NGO",
        "name": "Dokka Seethamma Charitable Trust",
        "description": "Continuing the Legacy of Dokka Seethamma - Providing free food and education services to the poor and needy",
        "url": "https://dokkaseethamma.org",
        "logo": "https://dokkaseethamma.org/logo.svg",
        "sameAs": [
          "https://facebook.com/dokkaseethamma",
          "https://twitter.com/dokkaseethamma",
          "https://instagram.com/dokkaseethamma"
        ]
      }
    `}
  </script>
</head>
<body class="font-sans antialiased bg-cream-50 text-earth-900">
  <slot />
</body>
</html>
