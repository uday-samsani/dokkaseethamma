---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Separator } from "@/components/ui/separator";
import { ArrowRight, Heart, BookOpen, HandHeart, Sprout, Sun } from "lucide-react";

const teamMembers = [
  { name: 'Trustee Name', role: 'Founder & Chairman', description: 'Dedicated to continuing the legacy of Dokka Seethamma.' },
  { name: 'Trustee Name', role: 'Secretary', description: 'Coordinating events and managing operations.' },
  { name: 'Trustee Name', role: 'Treasurer', description: 'Ensuring financial transparency and accountability.' },
];

const values = [
  { title: 'Compassion', description: 'We serve with love and empathy, treating every individual with dignity.', icon: Heart },
  { title: 'Transparency', description: 'We maintain complete openness in our operations and finances.', icon: Sun },
  { title: 'Community', description: 'We believe in collective action to create lasting change.', icon: HandHeart },
  { title: 'Sustainability', description: 'We build sustainable solutions for long-term welfare.', icon: Sprout },
];

const milestones = [
  { year: '2022', title: 'Trust Established', description: 'Founded with the mission to continue the legacy of the Golden Lady.' },
  { year: '2023', title: 'First Major Event', description: 'Successfully served over 1,000 meals in our first large-scale event.' },
  { year: '2024', title: '50,000 Meals Milestone', description: 'Reached the milestone of serving 50,000 meals.' },
  { year: '2025', title: 'Expanding Horizons', description: 'Planning to extend services to education support.' },
];
---

<Layout title="About Us" description="Learn about Dokka Seethamma Charitable Trust, our mission, values, and the legacy of the Golden Lady.">
  <Navigation />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 lg:pb-24 bg-gradient-to-b from-golden-50 to-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">About Us</Badge>
        <h1 class="text-4xl lg:text-5xl font-bold text-earth-900 mb-6">
          The Legacy of <span class="text-golden-600">Dokka Seethamma</span>
        </h1>
        <p class="text-lg text-earth-600 leading-relaxed">
          Continuing the golden tradition of selfless service and compassion.
        </p>
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="relative">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-xl">
            <img src="https://images.unsplash.com/photo-1594708767771-a7502f4ead5d?w=800&q=80" alt="Dokka Seethamma" class="w-full h-full object-cover" />
          </div>
          <div class="absolute -bottom-6 -right-6 w-48 h-48 bg-golden-100 rounded-2xl -z-10"></div>
        </div>
        
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-earth-900 mb-6">
            The Golden Lady Who Fed <span class="text-golden-600">Millions</span>
          </h2>
          <div class="prose prose-lg text-earth-600">
            <p class="mb-4">
              Dokka Seethamma, affectionately known as the "Golden Lady," was a beacon of hope and compassion. Throughout her life, she dedicated herself to serving food to the hungry.
            </p>
            <p class="mb-4">
              Her kitchen was always open, and no one who came to her door was ever turned away hungry. She believed that feeding a person was the highest form of service.
            </p>
            <p>
              Inspired by her commitment to humanity, Dokka Seethamma Charitable Trust was established to carry forward her noble mission.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section class="py-16 lg:py-24 bg-cream-50" id="mission">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8">
        <Card className="border-golden-100">
          <CardContent className="p-8">
            <div class="w-14 h-14 rounded-xl bg-golden-100 flex items-center justify-center text-golden-600 mb-6">
              <Heart className="w-7 h-7" />
            </div>
            <h3 class="text-2xl font-bold text-earth-900 mb-4">Our Mission</h3>
            <p class="text-earth-600 leading-relaxed">
              To eradicate hunger through regular food distribution programs. We are committed to extending services to education support for underprivileged children.
            </p>
          </CardContent>
        </Card>

        <Card className="border-golden-100">
          <CardContent className="p-8">
            <div class="w-14 h-14 rounded-xl bg-golden-100 flex items-center justify-center text-golden-600 mb-6">
              <BookOpen className="w-7 h-7" />
            </div>
            <h3 class="text-2xl font-bold text-earth-900 mb-4">Our Vision</h3>
            <p class="text-earth-600 leading-relaxed">
              A world where no one goes hungry, and every child has access to quality education. Communities where compassion drives action.
            </p>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Our Values</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
          Principles That <span class="text-golden-600">Guide Us</span>
        </h2>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((value) => (
          <Card className="text-center hover:shadow-md transition-shadow border-golden-50">
            <CardContent className="p-6">
              <div class="w-12 h-12 mx-auto rounded-lg bg-golden-100 flex items-center justify-center text-golden-600 mb-4">
                <value.icon className="w-6 h-6" />
              </div>
              <h3 class="text-lg font-bold text-earth-900 mb-2">{value.title}</h3>
              <p class="text-earth-600 text-sm">{value.description}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 lg:py-24 bg-cream-50" id="team">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Our Team</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
          Meet the <span class="text-golden-600">Trustees</span>
        </h2>
        <p class="text-earth-600 mt-4 max-w-2xl mx-auto">
          Dedicated individuals committed to serving the community.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {teamMembers.map((member) => (
          <Card className="overflow-hidden hover:shadow-xl transition-all group">
            <div class="aspect-[4/3] bg-gradient-to-br from-golden-100 to-golden-200 flex items-center justify-center">
              <Sun className="w-20 h-20 text-golden-400" />
            </div>
            <CardContent className="p-6">
              <h3 class="text-xl font-bold text-earth-900">{member.name}</h3>
              <p class="text-golden-600 font-medium mb-3">{member.role}</p>
              <p class="text-earth-600 text-sm">{member.description}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Our Journey</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
          Milestones & <span class="text-golden-600">Achievements</span>
        </h2>
      </div>

      <div class="space-y-8">
        {milestones.map((milestone, index) => (
          <div class="flex gap-6">
            <div class="flex flex-col items-center">
              <div class="w-4 h-4 rounded-full bg-golden-500"></div>
              {index < milestones.length - 1 && <div class="w-0.5 flex-1 bg-golden-200 mt-2"></div>}
            </div>
            <div class={index < milestones.length - 1 ? "pb-8" : ""}>
              <Badge className="mb-2 bg-golden-100 text-golden-700 hover:bg-golden-100">{milestone.year}</Badge>
              <h3 class="text-lg font-bold text-earth-900 mt-1">{milestone.title}</h3>
              <p class="text-earth-600 mt-2">{milestone.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-r from-golden-500 to-golden-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        Be Part of Our Story
      </h2>
      <p class="text-golden-100 text-lg mb-8 max-w-2xl mx-auto">
        Join us in continuing the legacy of Dokka Seethamma.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/donate">
          <Button size="lg" className="bg-white text-golden-600 hover:bg-cream-100 rounded-full px-8">
            Donate Now
          </Button>
        </a>
        <a href="/contact">
          <Button size="lg" variant="outline" className="border-white text-white hover:bg-white/10 rounded-full px-8">
            Contact Us
          </Button>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
