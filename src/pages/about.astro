---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Separator } from "@/components/ui/separator";
import { ArrowRight, Heart, BookOpen, HandHeart, Sprout, Sun } from "lucide-react";

const teamMembers = [
  { name: 'Managing Trustee', role: 'Founder & Chairman', description: 'Dedicated to continuing the legacy of Dokka Seethamma.' },
  { name: 'General Secretary', role: 'Operations Lead', description: 'Coordinating events and managing operations.' },
  { name: 'Treasurer', role: 'Financial Head', description: 'Ensuring financial transparency and accountability.' },
];

const values = [
  { title: 'Compassion', description: 'We serve with love and empathy, treating every individual with dignity.', icon: Heart },
  { title: 'Transparency', description: 'We maintain complete openness in our operations and finances.', icon: Sun },
  { title: 'Community', description: 'We believe in collective action to create lasting change.', icon: HandHeart },
  { title: 'Sustainability', description: 'We build sustainable solutions for long-term welfare.', icon: Sprout },
];

const milestones = [
  { year: '2022', title: 'Trust Established', description: 'Founded with the mission to continue the legacy of the Golden Lady.' },
  { year: '2023', title: 'First Major Event', description: 'Successfully served over 1,000 meals in our first large-scale event.' },
  { year: '2024', title: '50,000 Meals Milestone', description: 'Reached the milestone of serving 50,000 meals.' },
  { year: '2025', title: 'Expanding Horizons', description: 'Planning to extend services to education support.' },
];
---

<Layout title="About Us" description="Learn about Dokka Seethamma Charitable Trust, our mission, values, and the legacy of the Golden Lady.">
  <Navigation />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 lg:pb-24 bg-gradient-to-b from-golden-50 to-cream-50 dark:from-gray-900 dark:to-gray-800 transition-colors">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <Badge variant="outline" className="mb-4 text-golden-700 dark:text-golden-400 border-golden-300 dark:border-golden-500/50">About Us</Badge>
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-earth-900 dark:text-gray-100 mb-4 sm:mb-6">
          The Legacy of <span class="text-golden-600 dark:text-golden-400">Dokka Seethamma</span>
        </h1>
        <p class="text-base sm:text-lg text-earth-600 dark:text-gray-400 leading-relaxed">
          Continuing the golden tradition of selfless service and compassion.
        </p>
      </div>
    </div>
  </section>

  <!-- Story Section -->
  <section class="py-16 lg:py-24 bg-white dark:bg-gray-800 transition-colors">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div class="relative">
          <div class="aspect-[4/3] rounded-xl sm:rounded-2xl overflow-hidden shadow-xl">
            <img src="https://images.unsplash.com/photo-1594708767771-a7502f4ead5d?w=800&q=80" alt="Dokka Seethamma" class="w-full h-full object-cover max-w-full" />
          </div>
          <div class="absolute -bottom-4 -right-4 sm:-bottom-6 sm:-right-6 w-24 h-24 sm:w-48 sm:h-48 bg-golden-100 dark:bg-golden-900/20 rounded-xl sm:rounded-2xl -z-10"></div>
        </div>
        
        <div>
          <h2 class="text-3xl lg:text-4xl font-bold text-earth-900 dark:text-gray-100 mb-6">
            The Golden Lady Who Fed <span class="text-golden-600 dark:text-golden-400">Millions</span>
          </h2>
          <div class="prose prose-lg text-earth-600 dark:text-gray-400">
            <p class="mb-4">
              Dokka Seethamma, affectionately known as the "Golden Lady," was a beacon of hope and compassion. Throughout her life, she dedicated herself to serving food to the hungry.
            </p>
            <p class="mb-4">
              Her kitchen was always open, and no one who came to her door was ever turned away hungry. She believed that feeding a person was the highest form of service.
            </p>
            <p>
              Inspired by her commitment to humanity, Dokka Seethamma Charitable Trust was established to carry forward her noble mission.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission & Vision -->
  <section class="py-16 lg:py-24 bg-cream-50 dark:bg-gray-900 transition-colors" id="mission">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8">
        <Card className="border-golden-100 dark:border-gray-700 dark:bg-gray-800">
          <CardContent className="p-8">
            <div class="w-14 h-14 rounded-xl bg-golden-100 dark:bg-golden-900/30 flex items-center justify-center text-golden-600 dark:text-golden-400 mb-6">
              <Heart className="w-7 h-7" />
            </div>
            <h3 class="text-2xl font-bold text-earth-900 dark:text-gray-100 mb-4">Our Mission</h3>
            <p class="text-earth-600 dark:text-gray-400 leading-relaxed">
              To eradicate hunger through regular food distribution programs. We are committed to extending services to education support for underprivileged children.
            </p>
          </CardContent>
        </Card>

        <Card className="border-golden-100 dark:border-gray-700 dark:bg-gray-800">
          <CardContent className="p-8">
            <div class="w-14 h-14 rounded-xl bg-golden-100 dark:bg-golden-900/30 flex items-center justify-center text-golden-600 dark:text-golden-400 mb-6">
              <BookOpen className="w-7 h-7" />
            </div>
            <h3 class="text-2xl font-bold text-earth-900 dark:text-gray-100 mb-4">Our Vision</h3>
            <p class="text-earth-600 dark:text-gray-400 leading-relaxed">
              A world where no one goes hungry, and every child has access to quality education. Communities where compassion drives action.
            </p>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-16 lg:py-24 bg-white dark:bg-gray-800 transition-colors">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 dark:text-golden-400 border-golden-300 dark:border-golden-500/50">Our Values</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900 dark:text-gray-100">
          Principles That <span class="text-golden-600 dark:text-golden-400">Guide Us</span>
        </h2>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
        {values.map((value) => (
          <Card className="text-center hover:shadow-md transition-shadow border-golden-50 dark:border-gray-700 dark:bg-gray-800">
            <CardContent className="p-4 sm:p-6">
              <div class="w-10 h-10 sm:w-12 sm:h-12 mx-auto rounded-lg bg-golden-100 dark:bg-golden-900/30 flex items-center justify-center text-golden-600 dark:text-golden-400 mb-3 sm:mb-4">
                <value.icon className="w-5 h-5 sm:w-6 sm:h-6" />
              </div>
              <h3 class="text-sm sm:text-lg font-bold text-earth-900 dark:text-gray-100 mb-1 sm:mb-2">{value.title}</h3>
              <p class="text-earth-600 dark:text-gray-400 text-xs sm:text-sm">{value.description}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-16 lg:py-24 bg-cream-50 dark:bg-gray-900 transition-colors" id="team">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 dark:text-golden-400 border-golden-300 dark:border-golden-500/50">Our Team</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900 dark:text-gray-100">
          Meet the <span class="text-golden-600 dark:text-golden-400">Trustees</span>
        </h2>
        <p class="text-earth-600 dark:text-gray-400 mt-4 max-w-2xl mx-auto">
          Dedicated individuals committed to serving the community.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {teamMembers.map((member) => (
          <Card className="overflow-hidden hover:shadow-xl transition-all group dark:bg-gray-800 dark:border-gray-700">
            <div class="aspect-[4/3] bg-gradient-to-br from-golden-100 to-golden-200 dark:from-golden-900/30 dark:to-golden-800/30 flex items-center justify-center">
              <Sun className="w-20 h-20 text-golden-400" />
            </div>
            <CardContent className="p-6">
              <h3 class="text-xl font-bold text-earth-900 dark:text-gray-100">{member.name}</h3>
              <p class="text-golden-600 dark:text-golden-400 font-medium mb-3">{member.role}</p>
              <p class="text-earth-600 dark:text-gray-400 text-sm">{member.description}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-16 lg:py-24 bg-white dark:bg-gray-800 transition-colors">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 dark:text-golden-400 border-golden-300 dark:border-golden-500/50">Our Journey</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900 dark:text-gray-100">
          Milestones & <span class="text-golden-600 dark:text-golden-400">Achievements</span>
        </h2>
      </div>

      <div class="space-y-8">
        {milestones.map((milestone, index) => (
          <div class="flex gap-6">
            <div class="flex flex-col items-center">
              <div class="w-4 h-4 rounded-full bg-golden-500"></div>
              {index < milestones.length - 1 && <div class="w-0.5 flex-1 bg-golden-200 dark:bg-golden-800 mt-2"></div>}
            </div>
            <div class={index < milestones.length - 1 ? "pb-8" : ""}>
              <Badge className="mb-2 bg-golden-100 dark:bg-golden-900/30 text-golden-700 dark:text-golden-400 hover:bg-golden-100 dark:hover:bg-golden-900/30">{milestone.year}</Badge>
              <h3 class="text-lg font-bold text-earth-900 dark:text-gray-100 mt-1">{milestone.title}</h3>
              <p class="text-earth-600 dark:text-gray-400 mt-2">{milestone.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Supporters Section -->
  <section class="py-16 lg:py-20 bg-cream-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-10">
        <Badge variant="outline" className="mb-3 text-golden-700 dark:text-golden-400 border-golden-300 dark:border-golden-500/50">Our Supporters</Badge>
        <h3 class="text-2xl font-bold text-earth-900 dark:text-gray-100">Partners in <span class="text-golden-600 dark:text-golden-400">Service</span></h3>
        <p class="text-earth-600 dark:text-gray-400 mt-2 max-w-xl mx-auto">Organizations and individuals who make our work possible</p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <!-- Corporate Supporters -->
        <Card className="text-center py-6 dark:bg-gray-800 dark:border-gray-700 hover:shadow-md transition-shadow">
          <CardContent className="p-4">
            <div class="w-14 h-14 mx-auto rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-blue-600 dark:text-blue-400 mb-3">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
            </div>
            <h4 class="font-semibold text-earth-900 dark:text-gray-100 text-sm">State Bank of India</h4>
            <p class="text-xs text-earth-500 dark:text-gray-400 mt-1">Banking Partner</p>
          </CardContent>
        </Card>
        
        <Card className="text-center py-6 dark:bg-gray-800 dark:border-gray-700 hover:shadow-md transition-shadow">
          <CardContent className="p-4">
            <div class="w-14 h-14 mx-auto rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center text-green-600 dark:text-green-400 mb-3">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
            </div>
            <h4 class="font-semibold text-earth-900 dark:text-gray-100 text-sm">Andhra Pradesh Govt</h4>
            <p class="text-xs text-earth-500 dark:text-gray-400 mt-1">Official Support</p>
          </CardContent>
        </Card>
        
        <!-- Community Partners -->
        <Card className="text-center py-6 dark:bg-gray-800 dark:border-gray-700 hover:shadow-md transition-shadow">
          <CardContent className="p-4">
            <div class="w-14 h-14 mx-auto rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center text-purple-600 dark:text-purple-400 mb-3">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
            </div>
            <h4 class="font-semibold text-earth-900 dark:text-gray-100 text-sm">Local Community</h4>
            <p class="text-xs text-earth-500 dark:text-gray-400 mt-1">Volunteer Network</p>
          </CardContent>
        </Card>
        
        <!-- Individual Donors -->
        <Card className="text-center py-6 dark:bg-gray-800 dark:border-gray-700 hover:shadow-md transition-shadow">
          <CardContent className="p-4">
            <div class="w-14 h-14 mx-auto rounded-full bg-golden-100 dark:bg-golden-900/30 flex items-center justify-center text-golden-600 dark:text-golden-400 mb-3">
              <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
            </div>
            <h4 class="font-semibold text-earth-900 dark:text-gray-100 text-sm">Individual Donors</h4>
            <p class="text-xs text-earth-500 dark:text-gray-400 mt-1">500+ Supporters</p>
          </CardContent>
        </Card>
      </div>
      
      <div class="mt-10 text-center">
        <p class="text-earth-600 dark:text-gray-400 text-sm">Want to join our mission? <a href="/contact" class="text-golden-600 dark:text-golden-400 font-medium hover:underline">Become a partner</a></p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-r from-golden-500 to-golden-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        Be Part of Our Story
      </h2>
      <p class="text-golden-100 text-lg mb-8 max-w-2xl mx-auto">
        Join us in continuing the legacy of Dokka Seethamma.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/donate">
          <Button size="lg" className="bg-white text-golden-600 hover:bg-cream-100 rounded-full px-8">
            Donate Now
          </Button>
        </a>
        <a href="/contact">
          <Button size="lg" variant="outline" className="border-white text-white hover:bg-white/10 rounded-full px-8">
            Contact Us
          </Button>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
