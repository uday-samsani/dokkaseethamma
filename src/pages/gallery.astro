---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { Dialog, DialogContent, DialogTrigger } from "@/components/ui/dialog";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import { ArrowRight } from "lucide-react";

const galleryItems = [
  { src: 'https://images.unsplash.com/photo-1593113598332-cd288d649433?w=1200&q=80', title: 'Community Food Distribution', category: 'events', description: 'Volunteers serving meals' },
  { src: 'https://images.unsplash.com/photo-1532629345422-7515f3d16bb6?w=1200&q=80', title: 'Volunteers at Work', category: 'volunteers', description: 'Preparing food packages' },
  { src: 'https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=1200&q=80', title: 'Helping Hands', category: 'beneficiaries', description: 'Reaching out to those in need' },
  { src: 'https://images.unsplash.com/photo-1593113630400-ea4288922497?w=1200&q=80', title: 'Group Volunteering', category: 'volunteers', description: 'Team ready for distribution' },
  { src: 'https://images.unsplash.com/photo-1469571486292-0ba58a3f068b?w=1200&q=80', title: 'Community Support', category: 'beneficiaries', description: 'Supporting families in need' },
  { src: 'https://images.unsplash.com/photo-1556910103-1c02745aae4d?w=1200&q=80', title: 'Kitchen Preparation', category: 'events', description: 'Preparing nutritious meals' },
];

const categories = [
  { id: 'all', label: 'All Photos' },
  { id: 'events', label: 'Events' },
  { id: 'volunteers', label: 'Volunteers' },
  { id: 'beneficiaries', label: 'Beneficiaries' },
];
---

<Layout title="Gallery" description="Browse photos of our food distribution events and volunteers.">
  <Navigation />

  <!-- Hero -->
  <section class="relative pt-32 pb-16 lg:pb-24 bg-gradient-to-b from-golden-50 to-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Gallery</Badge>
        <h1 class="text-4xl lg:text-5xl font-bold text-earth-900 mb-6">
          Moments of <span class="text-golden-600">Compassion</span>
        </h1>
        <p class="text-lg text-earth-600 leading-relaxed">
          A visual journey through our events, volunteers, and the communities we serve.
        </p>
      </div>
    </div>
  </section>

  <!-- Gallery -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <Tabs defaultValue="all" className="w-full">
        <TabsList className="flex flex-wrap justify-center gap-2 mb-12 bg-transparent h-auto">
          {categories.map((cat) => (
            <TabsTrigger 
              key={cat.id} 
              value={cat.id}
              className="px-5 py-2.5 rounded-full data-[state=active]:bg-golden-500 data-[state=active]:text-white border border-cream-200"
            >
              {cat.label}
            </TabsTrigger>
          ))}
        </TabsList>

        {categories.map((cat) => (
          <TabsContent key={cat.id} value={cat.id} className="mt-0">
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
              {galleryItems
                .filter(item => cat.id === 'all' || item.category === cat.id)
                .map((item, index) => (
                  <Dialog key={index}>
                    <DialogTrigger asChild>
                      <div class="group relative aspect-[4/3] rounded-xl overflow-hidden cursor-pointer shadow-sm hover:shadow-xl transition-all">
                        <img 
                          src={item.src} 
                          alt={item.title} 
                          class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                          loading="lazy"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-earth-900/80 via-earth-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity flex flex-col justify-end p-6">
                          <h3 class="text-white font-bold text-lg">{item.title}</h3>
                          <p class="text-cream-200 text-sm">{item.description}</p>
                        </div>
                      </div>
                    </DialogTrigger>
                    <DialogContent className="max-w-4xl p-0 bg-transparent border-none">
                      <img src={item.src} alt={item.title} class="w-full rounded-lg" />
                      <div class="bg-white p-4 rounded-b-lg">
                        <h3 class="font-bold text-earth-900">{item.title}</h3>
                        <p class="text-earth-600 text-sm">{item.description}</p>
                      </div>
                    </DialogContent>
                  </Dialog>
                ))}
            </div>
          </TabsContent>
        ))}
      </Tabs>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-gradient-to-r from-golden-500 to-golden-600">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        Be Part of Our Story
      </h2>
      <p class="text-golden-100 text-lg mb-8">
        Join us at our next event and help us create more moments of joy.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/events">
          <Button size="lg" className="bg-white text-golden-600 hover:bg-cream-100 rounded-full px-8">
            View Events
          </Button>
        </a>
        <a href="/contact#volunteer">
          <Button size="lg" variant="outline" className="border-white text-white hover:bg-white/10 rounded-full px-8">
            Volunteer With Us
          </Button>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
