---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Label } from "@/components/ui/label";
import { MapPin, Mail, Phone, Clock, ChevronDown } from "lucide-react";

const faqs = [
  { question: 'How can I donate to the trust?', answer: 'You can donate online through our secure donation page, or contact us directly for bank transfer details.' },
  { question: 'Are donations tax-deductible?', answer: 'Yes, all donations are eligible for tax benefits under Section 80G of the Income Tax Act.' },
  { question: 'How can I volunteer?', answer: 'Fill out the volunteer form on this page or contact us directly. We welcome volunteers for our monthly events.' },
  { question: 'Where are your events held?', answer: 'Our events are primarily held in Vijayawada and surrounding areas in Andhra Pradesh.' },
];

const contactInfo = [
  { icon: MapPin, label: 'Address', value: 'Dokka Seethamma Charitable Trust\nVijayawada, Andhra Pradesh\nIndia - 520001' },
  { icon: Mail, label: 'Email', value: 'contact@dokkaseethamma.org', href: 'mailto:contact@dokkaseethamma.org' },
  { icon: Phone, label: 'Phone', value: '+91 98765 43210', href: 'tel:+919876543210' },
  { icon: Clock, label: 'Office Hours', value: 'Monday - Saturday\n9:00 AM - 6:00 PM IST' },
];
---

<Layout title="Contact Us" description="Get in touch with Dokka Seethamma Charitable Trust.">
  <Navigation />

  <!-- Hero -->
  <section class="relative pt-32 pb-16 lg:pb-24 bg-gradient-to-b from-golden-50 to-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Contact Us</Badge>
        <h1 class="text-4xl lg:text-5xl font-bold text-earth-900 mb-6">
          Get in <span class="text-golden-600">Touch</span>
        </h1>
        <p class="text-lg text-earth-600 leading-relaxed">
          Have questions or want to get involved? We'd love to hear from you.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl lg:text-3xl font-bold text-earth-900 mb-6">Send us a Message</h2>
          <form class="space-y-6" action="/contact" method="POST">
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="space-y-2">
                <Label for="name">Full Name *</Label>
                <Input id="name" name="name" required placeholder="Your name" />
              </div>
              <div class="space-y-2">
                <Label for="email">Email Address *</Label>
                <Input id="email" name="email" type="email" required placeholder="your@email.com" />
              </div>
            </div>
            
            <div class="space-y-2">
              <Label for="phone">Phone Number</Label>
              <Input id="phone" name="phone" type="tel" placeholder="+91 98765 43210" />
            </div>
            
            <div class="space-y-2">
              <Label for="subject">Subject *</Label>
              <select id="subject" name="subject" required class="w-full px-3 py-2 rounded-lg border border-cream-300 bg-cream-50 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none">
                <option value="">Select a subject</option>
                <option value="donation">Donation Inquiry</option>
                <option value="volunteer">Volunteering</option>
                <option value="event">Event Information</option>
                <option value="general">General Inquiry</option>
              </select>
            </div>
            
            <div class="space-y-2">
              <Label for="message">Message *</Label>
              <Textarea id="message" name="message" rows="5" required placeholder="How can we help you?" />
            </div>
            
            <Button type="submit" className="w-full bg-gradient-to-r from-golden-500 to-golden-600 hover:from-golden-600 hover:to-golden-700 text-white rounded-full">
              Send Message
            </Button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="lg:pl-8">
          <h2 class="text-2xl lg:text-3xl font-bold text-earth-900 mb-6">Contact Information</h2>
          
          <div class="space-y-4">
            {contactInfo.map((info) => (
              <Card key={info.label} className="border-golden-50">
                <CardContent className="p-4 flex items-start gap-4">
                  <div class="w-10 h-10 rounded-lg bg-golden-100 flex items-center justify-center text-golden-600 flex-shrink-0">
                    <info.icon className="w-5 h-5" />
                  </div>
                  <div>
                    <h3 class="font-medium text-earth-900">{info.label}</h3>
                    {info.href ? (
                      <a href={info.href} class="text-golden-600 hover:text-golden-700 whitespace-pre-line">
                        {info.value}
                      </a>
                    ) : (
                      <p class="text-earth-600 whitespace-pre-line text-sm">{info.value}</p>
                    )}
                  </div>
                </CardContent>
              </Card>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Volunteer Section -->
  <section class="py-16 lg:py-24 bg-cream-50" id="volunteer">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Volunteer With Us</Badge>
          <h2 class="text-3xl lg:text-4xl font-bold text-earth-900 mb-6">
            Join Our Team of <span class="text-golden-600">Change Makers</span>
          </h2>
          <p class="text-earth-600 text-lg leading-relaxed mb-6">
            Volunteers are the heart of our organization. Whether you can spare a few hours or want to contribute regularly, we'd love to have you.
          </p>
        </div>
        
        <Card>
          <CardContent className="p-8">
            <h3 class="text-xl font-bold text-earth-900 mb-6">Volunteer Registration</h3>
            <form class="space-y-4" action="/volunteer" method="POST">
              <div class="grid sm:grid-cols-2 gap-4">
                <Input name="volunteer_name" required placeholder="Full Name" />
                <Input name="volunteer_email" type="email" required placeholder="Email Address" />
              </div>
              <Input name="volunteer_phone" type="tel" placeholder="Phone Number" />
              <Textarea name="volunteer_message" rows="3" placeholder="Tell us about yourself" />
              <Button type="submit" className="w-full bg-gradient-to-r from-golden-500 to-golden-600 hover:from-golden-600 hover:to-golden-700">
                Register as Volunteer
              </Button>
            </form>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-white" id="faq">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">FAQ</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
          Frequently Asked <span class="text-golden-600">Questions</span>
        </h2>
      </div>

      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <div key={index} class="faq-item border border-golden-100 rounded-xl overflow-hidden">
            <button class="faq-toggle w-full flex items-center justify-between p-5 text-left bg-cream-50 hover:bg-golden-50 transition-colors">
              <span class="font-semibold text-earth-900 pr-4">{faq.question}</span>
              <ChevronDown className="w-5 h-5 text-golden-600 flex-shrink-0 faq-icon transition-transform" />
            </button>
            <div class="faq-content hidden p-5 bg-white border-t border-golden-100">
              <p class="text-earth-600">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />

  <script>
    document.querySelectorAll('.faq-toggle').forEach(button => {
      button.addEventListener('click', () => {
        const content = button.nextElementSibling;
        const icon = button.querySelector('.faq-icon');
        content?.classList.toggle('hidden');
        icon?.classList.toggle('rotate-180');
      });
    });
  </script>
</Layout>
