---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

const faqs = [
  {
    question: 'How can I donate to the trust?',
    answer: 'You can donate online through our secure donation page, or contact us directly for bank transfer details. We also accept in-kind donations of food and supplies.',
  },
  {
    question: 'Are donations tax-deductible?',
    answer: 'Yes, all donations to Dokka Seethamma Charitable Trust are eligible for tax benefits under Section 80G of the Income Tax Act.',
  },
  {
    question: 'How can I volunteer?',
    answer: 'Fill out the volunteer form on this page or contact us directly. We welcome volunteers for our monthly food distribution events and other activities.',
  },
  {
    question: 'Where are your events held?',
    answer: 'Our events are primarily held in Vijayawada and surrounding areas in Andhra Pradesh. Check our events page for specific locations.',
  },
  {
    question: 'Can I organize a food distribution event in my area?',
    answer: 'Yes! We welcome collaborations. Please contact us to discuss how we can support your initiative.',
  },
];
---

<Layout 
  title="Contact Us" 
  description="Get in touch with Dokka Seethamma Charitable Trust. Contact us for donations, volunteering, or any inquiries about our food distribution programs."
>
  <Navigation />

  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 lg:pb-24 bg-gradient-to-b from-golden-50 to-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-3xl mx-auto">
        <span class="inline-block px-4 py-1.5 rounded-full bg-golden-100 text-golden-700 text-sm font-medium mb-4">
          Contact Us
        </span>
        <h1 class="text-4xl lg:text-5xl font-bold text-earth-900 mb-6">
          Get in <span class="text-golden-600">Touch</span>
        </h1>
        <p class="text-lg text-earth-600 leading-relaxed">
          Have questions or want to get involved? We'd love to hear from you. Reach out to us through any of the channels below.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl lg:text-3xl font-bold text-earth-900 mb-6">Send us a Message</h2>
          <form class="space-y-6" action="/contact" method="POST">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-earth-700 mb-2">Full Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50"
                  placeholder="Your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-earth-700 mb-2">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50"
                  placeholder="your@email.com"
                />
              </div>
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-earth-700 mb-2">Phone Number</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50"
                placeholder="+91 99999 99999"
              />
            </div>
            
            <div>
              <label for="subject" class="block text-sm font-medium text-earth-700 mb-2">Subject</label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50"
              >
                <option value="">Select a subject</option>
                <option value="donation">Donation Inquiry</option>
                <option value="volunteer">Volunteering</option>
                <option value="event">Event Information</option>
                <option value="collaboration">Collaboration</option>
                <option value="general">General Inquiry</option>
              </select>
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-earth-700 mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50 resize-none"
                placeholder="How can we help you?"
              ></textarea>
            </div>
            
            <button
              type="submit"
              class="w-full sm:w-auto px-8 py-4 rounded-full bg-gradient-to-r from-golden-500 to-golden-600 text-white font-semibold shadow-lg hover:shadow-xl hover:from-golden-600 hover:to-golden-700 transition-all transform hover:-translate-y-0.5"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="lg:pl-8">
          <h2 class="text-2xl lg:text-3xl font-bold text-earth-900 mb-6">Contact Information</h2>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-golden-100 flex items-center justify-center text-golden-600 flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-earth-900 mb-1">Address</h3>
                <p class="text-earth-600">
                  Dokka Seethamma Charitable Trust<br />
                  Vijayawada, Andhra Pradesh<br />
                  India - 520001
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-golden-100 flex items-center justify-center text-golden-600 flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-earth-900 mb-1">Email</h3>
                <a href="mailto:contact@dokkaseethamma.org" class="text-golden-600 hover:text-golden-700 transition-colors">
                  contact@dokkaseethamma.org
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-golden-100 flex items-center justify-center text-golden-600 flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-earth-900 mb-1">Phone</h3>
                <a href="tel:+919999999999" class="text-golden-600 hover:text-golden-700 transition-colors">
                  +91 99999 99999
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-lg bg-golden-100 flex items-center justify-center text-golden-600 flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-earth-900 mb-1">Office Hours</h3>
                <p class="text-earth-600">
                  Monday - Saturday<br />
                  9:00 AM - 6:00 PM IST
                </p>
              </div>
            </div>
          </div>

          <!-- Social Links -->
          <div class="mt-8 pt-8 border-t border-cream-200">
            <h3 class="font-semibold text-earth-900 mb-4">Follow Us</h3>
            <div class="flex gap-4">
              <a href="https://facebook.com/dokkaseethamma" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-cream-100 flex items-center justify-center text-earth-600 hover:bg-golden-500 hover:text-white transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
              </a>
              <a href="https://twitter.com/dokkaseethamma" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-cream-100 flex items-center justify-center text-earth-600 hover:bg-golden-500 hover:text-white transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
              </a>
              <a href="https://instagram.com/dokkaseethamma" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-cream-100 flex items-center justify-center text-earth-600 hover:bg-golden-500 hover:text-white transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
              </a>
              <a href="https://youtube.com/dokkaseethamma" target="_blank" rel="noopener noreferrer" class="w-10 h-10 rounded-full bg-cream-100 flex items-center justify-center text-earth-600 hover:bg-golden-500 hover:text-white transition-all">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Volunteer Section -->
  <section class="py-16 lg:py-24 bg-cream-50" id="volunteer">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block px-4 py-1.5 rounded-full bg-golden-100 text-golden-700 text-sm font-medium mb-4">
            Volunteer With Us
          </span>
          <h2 class="text-3xl lg:text-4xl font-bold text-earth-900 mb-6">
            Join Our Team of <span class="text-golden-600">Change Makers</span>
          </h2>
          <p class="text-earth-600 text-lg leading-relaxed mb-6">
            Volunteers are the heart of our organization. Whether you can spare a few hours at an event or want to contribute your skills regularly, we'd love to have you on board.
          </p>
          <ul class="space-y-4 text-earth-600">
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Help with food preparation and distribution
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Organize fundraising events
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Spread awareness on social media
            </li>
            <li class="flex items-center gap-3">
              <svg class="w-5 h-5 text-green-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Contribute your professional skills
            </li>
          </ul>
        </div>
        <div class="bg-white rounded-2xl p-8 shadow-sm">
          <h3 class="text-xl font-bold text-earth-900 mb-6">Volunteer Registration</h3>
          <form class="space-y-4" action="/volunteer" method="POST">
            <div class="grid sm:grid-cols-2 gap-4">
              <input
                type="text"
                name="volunteer_name"
                required
                placeholder="Full Name"
                class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50"
              />
              <input
                type="email"
                name="volunteer_email"
                required
                placeholder="Email Address"
                class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50"
              />
            </div>
            <input
              type="tel"
              name="volunteer_phone"
              placeholder="Phone Number"
              class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50"
            />
            <textarea
              name="volunteer_message"
              rows="3"
              placeholder="Tell us about yourself and how you'd like to help"
              class="w-full px-4 py-3 rounded-lg border border-cream-300 focus:border-golden-500 focus:ring-2 focus:ring-golden-200 outline-none transition-all bg-cream-50 resize-none"
            ></textarea>
            <button
              type="submit"
              class="w-full px-6 py-3 rounded-lg bg-gradient-to-r from-golden-500 to-golden-600 text-white font-semibold shadow-md hover:shadow-lg hover:from-golden-600 hover:to-golden-700 transition-all"
            >
              Register as Volunteer
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-white" id="faq">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-1.5 rounded-full bg-golden-100 text-golden-700 text-sm font-medium mb-4">
          FAQ
        </span>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
          Frequently Asked <span class="text-golden-600">Questions</span>
        </h2>
      </div>

      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <div class="border border-cream-200 rounded-xl overflow-hidden">
            <button
              type="button"
              class="faq-toggle w-full flex items-center justify-between p-5 text-left bg-cream-50 hover:bg-golden-50 transition-colors"
              data-index={index}
            >
              <span class="font-semibold text-earth-900 pr-4">{faq.question}</span>
              <svg class="w-5 h-5 text-golden-600 flex-shrink-0 faq-icon transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            <div class="faq-content hidden p-5 bg-white border-t border-cream-200">
              <p class="text-earth-600">{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />

  <script>
    // FAQ Accordion
    document.querySelectorAll('.faq-toggle').forEach(button => {
      button.addEventListener('click', () => {
        const content = button.nextElementSibling;
        const icon = button.querySelector('.faq-icon');
        
        content?.classList.toggle('hidden');
        icon?.classList.toggle('rotate-180');
      });
    });
  </script>
</Layout>
