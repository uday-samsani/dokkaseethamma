---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import ImpactStats from '../components/ImpactStats.astro';
import MissionSection from '../components/MissionSection.astro';
import DonateCTA from '../components/DonateCTA.astro';
import RecentEvents from '../components/RecentEvents.astro';
---

<Layout 
  title="Home" 
  description="Dokka Seethamma Charitable Trust - Continuing the legacy of the Golden Lady by serving food and hope to millions. Join us in our mission to feed the hungry."
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center pt-20 lg:pt-0 overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1469571486292-0ba58a3f068b?w=1920&q=80" 
        alt="Community service" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-earth-900/90 via-earth-900/70 to-transparent"></div>
    </div>

    <!-- Decorative Elements -->
    <div class="absolute top-1/4 right-10 w-64 h-64 bg-golden-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-golden-400/5 rounded-full blur-3xl"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-golden-500/20 border border-golden-500/30 text-golden-300 text-sm font-medium mb-6 animate-fade-in">
          <span class="w-2 h-2 rounded-full bg-golden-400 animate-pulse"></span>
          Serving Since 2022
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold text-white leading-tight mb-6 animate-slide-up">
          Continuing the Legacy of <span class="text-golden-400">Dokka Seethamma</span>
        </h1>
        
        <p class="text-lg sm:text-xl text-cream-200 leading-relaxed mb-8 max-w-2xl animate-slide-up" style="animation-delay: 100ms;">
          Inspired by the Golden Lady who fed millions, we serve nutritious meals to the hungry and extend compassion to those in need. Join us in making a difference.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 animate-slide-up" style="animation-delay: 200ms;">
          <a
            href="/donate"
            class="inline-flex items-center justify-center px-8 py-4 rounded-full bg-gradient-to-r from-golden-500 to-golden-600 text-white font-semibold text-lg shadow-lg hover:shadow-xl hover:from-golden-600 hover:to-golden-700 transition-all transform hover:-translate-y-0.5"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
            Donate Now
          </a>
          <a
            href="/about"
            class="inline-flex items-center justify-center px-8 py-4 rounded-full border-2 border-white/30 text-white font-semibold text-lg hover:bg-white/10 transition-all"
          >
            Our Story
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 hidden lg:flex flex-col items-center gap-2 text-cream-400 animate-float">
          <span class="text-sm">Scroll to explore</span>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact Stats -->
  <ImpactStats />

  <!-- Mission Section -->
  <MissionSection />

  <!-- Recent Events -->
  <RecentEvents />

  <!-- Donate CTA -->
  <DonateCTA />

  <!-- Testimonials / Trust Section -->
  <section class="py-16 lg:py-24 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="inline-block px-4 py-1.5 rounded-full bg-golden-100 text-golden-700 text-sm font-medium mb-4">
          Why Choose Us
        </span>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
          Transparency & <span class="text-golden-600">Trust</span>
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl p-8 shadow-sm text-center">
          <div class="w-16 h-16 mx-auto rounded-full bg-golden-100 flex items-center justify-center text-golden-600 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-earth-900 mb-2">100% Transparency</h3>
          <p class="text-earth-600">Every rupee donated is accounted for. Regular financial reports published for public review.</p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-sm text-center">
          <div class="w-16 h-16 mx-auto rounded-full bg-golden-100 flex items-center justify-center text-golden-600 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-earth-900 mb-2">Direct Impact</h3>
          <p class="text-earth-600">Your donations directly fund food distribution events with minimal administrative costs.</p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-sm text-center">
          <div class="w-16 h-16 mx-auto rounded-full bg-golden-100 flex items-center justify-center text-golden-600 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-earth-900 mb-2">Community Driven</h3>
          <p class="text-earth-600">Powered by passionate volunteers and community support, creating lasting change together.</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
