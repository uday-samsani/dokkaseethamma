---
import Layout from '@/layouts/Layout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';
import { Button } from "@/components/ui/button";
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Heart, ArrowRight, Users, Utensils, Calendar, Clock, CheckCircle } from "lucide-react";

const stats = [
  { value: '50,000+', label: 'Meals Served', icon: Utensils },
  { value: '10,000+', label: 'People Fed', icon: Users },
  { value: '150+', label: 'Events Conducted', icon: Calendar },
  { value: '3+', label: 'Years of Service', icon: Clock },
];

const features = [
  {
    title: 'Food Distribution',
    description: 'Monthly food distribution events serving nutritious meals to the hungry and underprivileged.',
    icon: Utensils,
  },
  {
    title: 'Community Kitchen',
    description: 'Preparing fresh, healthy meals with love and care for large-scale distribution.',
    icon: Users,
  },
  {
    title: 'Future Education',
    description: 'Plans to extend our services to education support for underprivileged children.',
    icon: CheckCircle,
  },
  {
    title: 'Volunteer Network',
    description: 'Building a community of compassionate volunteers dedicated to serving others.',
    icon: Heart,
  },
];

const upcomingEvents = [
  {
    title: 'Monthly Food Distribution',
    date: '2025-02-25',
    time: '10:00 AM - 2:00 PM',
    location: 'Community Center, Vijayawada',
    description: 'Join us as we serve nutritious meals to over 500 people in need.',
  },
  {
    title: 'Annadanam Program',
    date: '2025-03-08',
    time: '11:00 AM - 3:00 PM',
    location: 'Temple Premises, Guntur',
    description: 'Special food distribution event in honor of Dokka Seethamma.',
  },
];

const formatDate = (dateString: string) => {
  const date = new Date(dateString);
  return {
    day: date.getDate(),
    month: date.toLocaleString('en-US', { month: 'short' }),
  };
};
---

<Layout 
  title="Home" 
  description="Dokka Seethamma Charitable Trust - Continuing the legacy of the Golden Lady by serving food and hope to millions. Join us in our mission to feed the hungry."
>
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center pt-20 lg:pt-0 overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <img 
        src="https://images.unsplash.com/photo-1469571486292-0ba58a3f068b?w=1920&q=80" 
        alt="Community service" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-earth-900/90 via-earth-900/70 to-transparent"></div>
    </div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="max-w-3xl">
        <Badge variant="secondary" className="mb-6 bg-golden-500/20 text-golden-300 border-golden-500/30">
          <span class="w-2 h-2 rounded-full bg-golden-400 animate-pulse mr-2"></span>
          Serving Since 2022
        </Badge>
        
        <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold text-white leading-tight mb-6">
          Continuing the Legacy of <span class="text-golden-400">Dokka Seethamma</span>
        </h1>
        
        <p class="text-lg sm:text-xl text-cream-200 leading-relaxed mb-8 max-w-2xl">
          Inspired by the Golden Lady who fed millions, we serve nutritious meals to the hungry and extend compassion to those in need.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/donate">
            <Button size="lg" className="bg-gradient-to-r from-golden-500 to-golden-600 hover:from-golden-600 hover:to-golden-700 text-white rounded-full px-8">
              <Heart className="w-5 h-5 mr-2" />
              Donate Now
            </Button>
          </a>
          <a href="/about">
            <Button size="lg" variant="outline" className="border-white/30 text-white hover:bg-white/10 rounded-full px-8">
              Our Story
              <ArrowRight className="w-5 h-5 ml-2" />
            </Button>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Impact Stats -->
  <section class="py-16 lg:py-24 bg-gradient-to-b from-cream-50 to-golden-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Our Impact</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
          Making a <span class="text-golden-600">Difference</span>
        </h2>
        <p class="text-earth-600 max-w-2xl mx-auto mt-4">
          Every meal served, every smile shared, every life touched - together we create ripples of change.
        </p>
      </div>

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
        {stats.map((stat, index) => (
          <Card key={index} className="group text-center hover:shadow-xl transition-all duration-300 border-golden-100">
            <CardContent className="p-6">
              <stat.icon className="w-8 h-8 mx-auto text-golden-500 mb-4" />
              <div class="text-3xl font-bold text-golden-600">{stat.value}</div>
              <div class="text-earth-600 font-medium mt-1">{stat.label}</div>
            </CardContent>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Mission Section -->
  <section class="py-16 lg:py-24 bg-cream-50" id="mission">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <div>
          <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Our Mission</Badge>
          <h2 class="text-3xl lg:text-4xl font-bold text-earth-900 mb-6">
            Continuing the Legacy of the <span class="text-golden-600">Golden Lady</span>
          </h2>
          <p class="text-earth-600 text-lg leading-relaxed mb-6">
            Inspired by Dokka Seethamma, "the golden lady" who devoted her life to feeding millions, we carry forward her torch of compassion.
          </p>
          <p class="text-earth-600 leading-relaxed mb-8">
            We conduct monthly food distribution events, serving fresh, nutritious meals to the poor and needy. As we grow, we plan to extend our services to education support.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="/about">
              <Button className="bg-earth-800 hover:bg-earth-900 text-white rounded-full">
                Learn Our Story
                <ArrowRight className="w-4 h-4 ml-2" />
              </Button>
            </a>
            <a href="/donate">
              <Button variant="outline" className="border-golden-500 text-golden-700 hover:bg-golden-50 rounded-full">
                Support Our Cause
              </Button>
            </a>
          </div>
        </div>

        <div class="grid sm:grid-cols-2 gap-4">
          {features.map((feature, index) => (
            <Card key={index} className="hover:shadow-md transition-all group">
              <CardContent className="p-6">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-golden-100 to-golden-200 flex items-center justify-center text-golden-700 mb-4 group-hover:scale-110 transition-transform">
                  <feature.icon className="w-6 h-6" />
                </div>
                <h3 class="text-lg font-semibold text-earth-900 mb-2">{feature.title}</h3>
                <p class="text-earth-600 text-sm">{feature.description}</p>
              </CardContent>
            </Card>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Events -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 mb-12">
        <div>
          <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Upcoming Events</Badge>
          <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
            Join Our <span class="text-golden-600">Initiatives</span>
          </h2>
        </div>
        <a href="/events" class="text-golden-700 font-medium hover:text-golden-800 transition-colors inline-flex items-center">
          View All Events
          <ArrowRight className="w-4 h-4 ml-2" />
        </a>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {upcomingEvents.map((event, index) => {
          const date = formatDate(event.date);
          return (
            <Card key={index} className="group overflow-hidden hover:shadow-xl transition-all">
              <div class="flex flex-col sm:flex-row">
                <div class="sm:w-1/3 bg-golden-100 flex flex-col items-center justify-center p-6">
                  <div class="text-4xl font-bold text-golden-600">{date.day}</div>
                  <div class="text-sm font-medium text-earth-600 uppercase">{date.month}</div>
                </div>
                <div class="sm:w-2/3 p-6">
                  <h3 class="text-xl font-bold text-earth-900 mb-2 group-hover:text-golden-700 transition-colors">
                    {event.title}
                  </h3>
                  <p class="text-earth-600 text-sm mb-4">{event.description}</p>
                  <div class="space-y-1 text-sm text-earth-500">
                    <div class="flex items-center gap-2">
                      <Clock className="w-4 h-4 text-golden-500" />
                      <span>{event.time}</span>
                    </div>
                  </div>
                </div>
              </div>
            </Card>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Donate CTA -->
  <section class="relative py-20 lg:py-28 overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://images.unsplash.com/photo-1488521787991-ed7bbaae773c?w=1920&q=80" 
        alt="Helping hands" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-earth-900/95 via-earth-900/85 to-earth-900/70"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-2xl">
        <Badge variant="outline" className="mb-6 text-golden-300 border-golden-500/30 bg-golden-500/10">
          Make a Difference Today
        </Badge>
        <h2 class="text-3xl lg:text-5xl font-bold text-white mb-6 leading-tight">
          Your Support Can <span class="text-golden-400">Feed Many</span>
        </h2>
        <p class="text-cream-200 text-lg leading-relaxed mb-8">
          Every donation helps us serve nutritious meals to those in need. Join us in continuing the legacy of Dokka Seethamma.
        </p>
        
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-8">
          {['₹500', '₹1,000', '₹2,500', '₹5,000'].map((amount) => (
            <a href={`/donate?amount=${amount.replace('₹', '').replace(',', '')}`}>
              <Button variant="outline" className="w-full border-white/20 text-white hover:bg-golden-500 hover:border-golden-500">
                {amount}
              </Button>
            </a>
          ))}
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/donate">
            <Button size="lg" className="bg-gradient-to-r from-golden-500 to-golden-600 hover:from-golden-600 hover:to-golden-700 text-white rounded-full px-8">
              <Heart className="w-5 h-5 mr-2" />
              Donate Now
            </Button>
          </a>
          <a href="/contact#volunteer">
            <Button size="lg" variant="outline" className="border-white/30 text-white hover:bg-white/10 rounded-full px-8">
              Become a Volunteer
            </Button>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Section -->
  <section class="py-16 lg:py-24 bg-cream-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="outline" className="mb-4 text-golden-700 border-golden-300">Why Choose Us</Badge>
        <h2 class="text-3xl lg:text-4xl font-bold text-earth-900">
          Transparency & <span class="text-golden-600">Trust</span>
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <Card className="text-center">
          <CardContent className="p-8">
            <div class="w-16 h-16 mx-auto rounded-full bg-green-100 flex items-center justify-center text-green-600 mb-4">
              <CheckCircle className="w-8 h-8" />
            </div>
            <h3 class="text-lg font-bold text-earth-900 mb-2">100% Transparency</h3>
            <p class="text-earth-600 text-sm">Every rupee donated is accounted for. Regular financial reports published.</p>
          </CardContent>
        </Card>

        <Card className="text-center">
          <CardContent className="p-8">
            <div class="w-16 h-16 mx-auto rounded-full bg-blue-100 flex items-center justify-center text-blue-600 mb-4">
              <Heart className="w-8 h-8" />
            </div>
            <h3 class="text-lg font-bold text-earth-900 mb-2">Direct Impact</h3>
            <p class="text-earth-600 text-sm">Your donations directly fund food distribution with minimal admin costs.</p>
          </CardContent>
        </Card>

        <Card className="text-center">
          <CardContent className="p-8">
            <div class="w-16 h-16 mx-auto rounded-full bg-golden-100 flex items-center justify-center text-golden-600 mb-4">
              <Users className="w-8 h-8" />
            </div>
            <h3 class="text-lg font-bold text-earth-900 mb-2">Community Driven</h3>
            <p class="text-earth-600 text-sm">Powered by passionate volunteers and community support.</p>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
